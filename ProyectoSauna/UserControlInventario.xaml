<UserControl x:Class="ProyectoSauna.UserControlInventario"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="#0B0F1A">

    <UserControl.Resources>
        <SolidColorBrush x:Key="Bg0" Color="#0B0F1A"/>
        <SolidColorBrush x:Key="Bg1" Color="#101724"/>
        <SolidColorBrush x:Key="Bg2" Color="#141C2B"/>
        <SolidColorBrush x:Key="Card" Color="#121A28"/>
        <SolidColorBrush x:Key="CardBorder" Color="#1E2A3D"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="MutedText" Color="#97A2B3"/>
        <SolidColorBrush x:Key="Cyan" Color="#00D4FF"/>
        <SolidColorBrush x:Key="Blue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="Green" Color="#16C784"/>
        <SolidColorBrush x:Key="Red" Color="#EF4444"/>
        <SolidColorBrush x:Key="Yellow" Color="#F59E0B"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Card}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.15" BlurRadius="8" ShadowDepth="2" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputWrap" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Bg2}"/>
            <Setter Property="BorderBrush" Value="#263145"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="7"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <Style x:Key="Lbl" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource MutedText}"/>
            <Setter Property="FontSize" Value="10.5"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <Style x:Key="Btn" TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Padding" Value="14,5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="{StaticResource Blue}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="7" SnapsToDevicePixels="True">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="6" ShadowDepth="2" Direction="270"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" TargetName="border" Value="#3A3F4B"/>
                                <Setter Property="Opacity" TargetName="border" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Pill" TargetType="Border">
            <Setter Property="Background" Value="#1A2332"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <Style x:Key="HeaderCell" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#182338"/>
            <Setter Property="Foreground" Value="{StaticResource MutedText}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="10.5"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#263145"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <Style x:Key="GridBase" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="AlternatingRowBackground" Value="#0F1724"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeight" Value="32"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
        </Style>

        <Style x:Key="KpiBadge" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Bg2}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="4" ShadowDepth="1" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource Bg1}" CornerRadius="12" Padding="14" Margin="0,0,0,12">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="6" ShadowDepth="2" Direction="270"/>
            </Border.Effect>
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="38" Height="38" Background="{StaticResource Cyan}" CornerRadius="10" Margin="0,0,12,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#00D4FF" Opacity="0.4" BlurRadius="12" ShadowDepth="0"/>
                        </Border.Effect>
                        <TextBlock Text="📦" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="Inventario de Productos" Foreground="{StaticResource PrimaryText}" FontSize="16" FontWeight="Bold" Margin="0,0,0,2"/>
                        <TextBlock Text="Sistema integral de gestión de stock y movimientos" Foreground="{StaticResource MutedText}" FontSize="11" Opacity="0.8"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Border Style="{StaticResource KpiBadge}">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,16,0">
                                <TextBlock Text="TOTAL PRODUCTOS" Foreground="{StaticResource MutedText}" FontSize="8.5" FontWeight="Bold"/>
                                <TextBlock x:Name="txtTotalProductos" Text="0" Foreground="{StaticResource Cyan}" FontSize="20" FontWeight="Bold" Margin="0,2,0,0"/>
                            </StackPanel>
                            <Border Width="1" Background="#263145" Margin="0,2" Opacity="0.5"/>
                            <StackPanel Margin="16,0">
                                <TextBlock Text="STOCK TOTAL" Foreground="{StaticResource MutedText}" FontSize="8.5" FontWeight="Bold"/>
                                <TextBlock x:Name="txtStockTotal" Text="0" Foreground="{StaticResource Green}" FontSize="20" FontWeight="Bold" Margin="0,2,0,0"/>
                            </StackPanel>
                            <Border Width="1" Background="#263145" Margin="0,2" Opacity="0.5"/>
                            <StackPanel Margin="16,0,0,0">
                                <TextBlock Text="ALERTAS" Foreground="{StaticResource MutedText}" FontSize="8.5" FontWeight="Bold"/>
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <TextBlock x:Name="txtStockBajo" Text="0" Foreground="{StaticResource Red}" FontSize="20" FontWeight="Bold"/>
                                    <TextBlock Text="⚠" Foreground="{StaticResource Red}" FontSize="14" Margin="4,4,0,0" VerticalAlignment="Top"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <StackPanel Margin="6,0,0,0" Width="190">
                        <TextBlock Text="🔍 BÚSQUEDA RÁPIDA" Style="{StaticResource Lbl}" FontSize="9" FontWeight="Bold"/>
                        <Border Style="{StaticResource InputWrap}">
                            <TextBox x:Name="txtBuscar" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryText}" FontSize="11.5" materialDesign:HintAssist.Hint="Buscar productos..." TextChanged="txtBuscar_TextChanged"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="8,0,0,0" Width="150">
                        <TextBlock Text="📂 CATEGORÍA" Style="{StaticResource Lbl}" FontSize="9" FontWeight="Bold"/>
                        <Border Style="{StaticResource InputWrap}">
                            <ComboBox x:Name="cbCategorias" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryText}" FontSize="11.5" DisplayMemberPath="nombre" SelectedValuePath="idCategoriaProducto" SelectionChanged="cbCategorias_SelectionChanged"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.65*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="6" Height="20" Background="{StaticResource Cyan}" CornerRadius="3" Margin="0,0,8,0"/>
                            <TextBlock Text="Información del Producto" Foreground="{StaticResource Cyan}" Style="{StaticResource SectionTitle}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.75*"/>
                            <ColumnDefinition Width="1.15*"/>
                            <ColumnDefinition Width="0.95*"/>
                            <ColumnDefinition Width="1.35*"/>
                            <ColumnDefinition Width="0.7*"/>
                            <ColumnDefinition Width="0.7*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="0,0,5,0">
                            <TextBlock Text="CÓDIGO" Style="{StaticResource Lbl}" FontWeight="Bold" FontSize="9"/>
                            <Border Style="{StaticResource InputWrap}">
                                <TextBox x:Name="txtCodigo" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryText}" FontSize="11.5"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="2.5,0">
                            <TextBlock Text="NOMBRE DEL PRODUCTO" Style="{StaticResource Lbl}" FontWeight="Bold" FontSize="9"/>
                            <Border Style="{StaticResource InputWrap}">
                                <TextBox x:Name="txtNombre" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryText}" FontSize="11.5"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="2.5,0">
                            <TextBlock Text="CATEGORÍA" Style="{StaticResource Lbl}" FontWeight="Bold" FontSize="9"/>
                            <Border Style="{StaticResource InputWrap}">
                                <ComboBox x:Name="cbCategoriaProducto" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryText}" FontSize="11.5" DisplayMemberPath="nombre" SelectedValuePath="idCategoriaProducto"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="3" Margin="2.5,0">
                            <TextBlock Text="DESCRIPCIÓN" Style="{StaticResource Lbl}" FontWeight="Bold" FontSize="9"/>
                            <Border Style="{StaticResource InputWrap}">
                                <TextBox x:Name="txtDescripcion" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryText}" FontSize="11.5"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="4" Margin="2.5,0">
                            <TextBlock Text="P. COMPRA" Style="{StaticResource Lbl}" FontWeight="Bold" FontSize="9"/>
                            <Border Style="{StaticResource InputWrap}">
                                <TextBox x:Name="txtPrecioCompra" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryText}" FontSize="11.5"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="5" Margin="5,0,0,0">
                            <TextBlock Text="P. VENTA" Style="{StaticResource Lbl}" FontWeight="Bold" FontSize="9"/>
                            <Border Style="{StaticResource InputWrap}">
                                <TextBox x:Name="txtPrecioVenta" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryText}" FontSize="11.5"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="2" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <StackPanel Width="90" Margin="0,0,5,0">
                                <TextBlock Text="STOCK ACTUAL" Style="{StaticResource Lbl}" FontWeight="Bold" FontSize="9"/>
                                <Border Style="{StaticResource InputWrap}" BorderBrush="{StaticResource Green}" BorderThickness="1.5">
                                    <TextBox x:Name="txtStockActual" Background="Transparent" BorderThickness="0" Foreground="{StaticResource Green}" FontSize="12" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Width="90">
                                <TextBlock Text="STOCK MÍNIMO" Style="{StaticResource Lbl}" FontWeight="Bold" FontSize="9"/>
                                <Border Style="{StaticResource InputWrap}" BorderBrush="{StaticResource Yellow}" BorderThickness="1.5">
                                    <TextBox x:Name="txtStockMinimo" Background="Transparent" BorderThickness="0" Foreground="{StaticResource Yellow}" FontSize="12" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <Button Content="➕ Insertar" Style="{StaticResource Btn}" Background="{StaticResource Cyan}" Click="btnAgregar_Click" Width="75"/>
                            <Button Content="✏️ Actualizar" Style="{StaticResource Btn}" Background="{StaticResource Blue}" Click="btnModificar_Click" Width="90"/>
                            <Button Content="🗑️ Eliminar" Style="{StaticResource Btn}" Background="{StaticResource Red}" Click="btnEliminar_Click" Width="82"/>
                            <Button Content="🔄" Style="{StaticResource Btn}" Background="Transparent" BorderBrush="{StaticResource Cyan}" BorderThickness="1.5" Width="41" Padding="0" Foreground="{StaticResource Cyan}" Click="btnLimpiar_Click" ToolTip="Limpiar formulario"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="6" Height="20" Background="{StaticResource Green}" CornerRadius="3" Margin="0,0,8,0"/>
                            <TextBlock Text="Registro de Movimiento" Foreground="{StaticResource Green}" Style="{StaticResource SectionTitle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Border Style="{StaticResource Pill}">
                                <RadioButton x:Name="rbEntrada" GroupName="ES" Content="📥 Entrada" Foreground="{StaticResource Green}" FontSize="11" FontWeight="SemiBold" Checked="rbEntrada_Checked"/>
                            </Border>
                            <Border Style="{StaticResource Pill}" Margin="0">
                                <RadioButton x:Name="rbSalida" GroupName="ES" Content="📤 Salida" Foreground="{StaticResource Red}" FontSize="11" FontWeight="SemiBold" Checked="rbSalida_Checked"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="0,0,5,0">
                            <TextBlock Text="CANTIDAD" Style="{StaticResource Lbl}" FontWeight="Bold" FontSize="9"/>
                            <Border Style="{StaticResource InputWrap}">
                                <TextBox x:Name="txtCantidad" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryText}" FontSize="12" FontWeight="SemiBold" TextChanged="RecalcularCostoTotal"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="COSTO UNITARIO" Style="{StaticResource Lbl}" FontWeight="Bold" FontSize="9"/>
                            <Border Style="{StaticResource InputWrap}">
                                <TextBox x:Name="txtCostoUnitario" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryText}" FontSize="12" FontWeight="SemiBold" TextChanged="RecalcularCostoTotal"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="2" Margin="0,6,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="0,0,5,0">
                            <TextBlock Text="COSTO TOTAL" Style="{StaticResource Lbl}" FontWeight="Bold" FontSize="9"/>
                            <Border Style="{StaticResource InputWrap}" Background="#162838" BorderBrush="{StaticResource Green}" BorderThickness="1.5">
                                <TextBox x:Name="txtCostoTotal" Background="Transparent" BorderThickness="0" Foreground="{StaticResource Green}" FontSize="14" FontWeight="Bold" IsReadOnly="True"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="FECHA" Style="{StaticResource Lbl}" FontWeight="Bold" FontSize="9"/>
                            <Border Style="{StaticResource InputWrap}">
                                <DatePicker x:Name="dpFecha" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryText}" FontSize="11.5"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <StackPanel Grid.Row="3" Margin="0,6,0,0">
                        <TextBlock Text="OBSERVACIONES" Style="{StaticResource Lbl}" FontWeight="Bold" FontSize="9"/>
                        <Border Style="{StaticResource InputWrap}" Margin="0,0,0,6">
                            <TextBox x:Name="txtObservaciones" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryText}" FontSize="11.5" AcceptsReturn="True" Height="38" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                        </Border>
                        <Button x:Name="btnRegistrarMovimiento" Content="✓ REGISTRAR MOVIMIENTO" Style="{StaticResource Btn}" Background="{StaticResource Green}" Click="btnRegistrarMovimiento_Click" Margin="0" Height="36" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.65*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="6" Height="18" Background="{StaticResource Cyan}" CornerRadius="3" Margin="0,0,8,0"/>
                            <TextBlock Text="Inventario de Productos" Foreground="{StaticResource PrimaryText}" FontSize="12" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>

                    <DataGrid Grid.Row="1" x:Name="dataGridProductos" AutoGenerateColumns="False" IsReadOnly="True" Style="{StaticResource GridBase}" ColumnHeaderStyle="{StaticResource HeaderCell}" SelectionMode="Single" SelectionChanged="dataGridProductos_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="CÓDIGO" Binding="{Binding codigo}" Width="0.7*"/>
                            <DataGridTextColumn Header="NOMBRE" Binding="{Binding nombre}" Width="1.2*"/>
                            <DataGridTextColumn Header="DESCRIPCIÓN" Binding="{Binding descripcion}" Width="1.5*"/>
                            <DataGridTextColumn Header="COMPRA" Binding="{Binding precioCompra, StringFormat=N2}" Width="0.65*"/>
                            <DataGridTextColumn Header="VENTA" Binding="{Binding precioVenta, StringFormat=N2}" Width="0.65*"/>
                            <DataGridTextColumn Header="STOCK" Binding="{Binding stockActual}" Width="0.5*"/>
                            <DataGridTextColumn Header="MÍN" Binding="{Binding stockMinimo}" Width="0.5*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="6" Height="18" Background="{StaticResource Green}" CornerRadius="3" Margin="0,0,8,0"/>
                            <TextBlock Text="Historial de Movimientos" Foreground="{StaticResource PrimaryText}" FontSize="12" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>

                    <DataGrid Grid.Row="1" x:Name="dataGridMovimientos" AutoGenerateColumns="False" IsReadOnly="True" Style="{StaticResource GridBase}" ColumnHeaderStyle="{StaticResource HeaderCell}" SelectionChanged="dataGridMovimientos_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="FECHA" Binding="{Binding fecha, StringFormat=dd/MM/yy}" Width="0.75*"/>
                            <DataGridTextColumn Header="TIPO" Binding="{Binding idTipoMovimientoNavigation.descripcion}" Width="1.2*"/>
                            <DataGridTextColumn Header="CANT" Binding="{Binding cantidad}" Width="0.5*"/>
                            <DataGridTextColumn Header="C.U" Binding="{Binding costoUnitario, StringFormat=N2}" Width="0.65*"/>
                            <DataGridTextColumn Header="TOTAL" Binding="{Binding costoTotal, StringFormat=N2}" Width="0.75*"/>
                            <DataGridTextColumn Header="OBSERVACIONES" Binding="{Binding observaciones}" Width="1.4*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>