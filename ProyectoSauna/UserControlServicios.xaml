<UserControl x:Class="ProyectoSauna.UserControlServicios"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{StaticResource BackgroundBrush}">
    <UserControl.Resources>
        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="#6B7280"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="8,8,8,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="8,8,8,4"/>
        </Style>
        <Style TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER CON FILTROS SIMPLIFICADOS -->
        <Border Grid.Row="0" Background="{StaticResource HeaderBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Gesti贸n de Servicios" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="{StaticResource TextPrimaryBrush}"/>

                <!-- FILTROS BSICOS -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBox x:Name="txtBuscar" 
                             materialDesign:HintAssist.Hint="Buscar servicio..." 
                             materialDesign:HintAssist.Foreground="#9CA3AF"
                             Width="280" 
                             Margin="0,0,12,0"
                             TextChanged="txtBuscar_TextChanged"/>

                    <ComboBox x:Name="cbFiltroCategoria" 
                              materialDesign:HintAssist.Hint="Categor铆a"
                              materialDesign:HintAssist.Foreground="#9CA3AF"
                              Width="180" 
                              DisplayMemberPath="nombre" 
                              SelectedValuePath="idCategoriaServicio" 
                              Margin="0,0,12,0"
                              SelectionChanged="cbFiltroCategoria_SelectionChanged"/>

                    <CheckBox x:Name="chkMostrarInactivos" 
                              Content="Mostrar inactivos" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              VerticalAlignment="Center"
                              Margin="0,0,16,0"
                              Checked="chkMostrarInactivos_Checked"
                              Unchecked="chkMostrarInactivos_Unchecked"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- PANEL DE FORMULARIO -->
            <Border Grid.Column="0" 
                    Background="{StaticResource CardBrush}" 
                    CornerRadius="8" 
                    Padding="20" 
                    Effect="{StaticResource CardShadow}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text=" Datos del Servicio" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryBrush}" 
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Nombre *" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="txtNombre" 
                                 materialDesign:HintAssist.Hint="Ej: Masaje terap茅utico" 
                                 materialDesign:HintAssist.Foreground="#9CA3AF"
                                 Margin="0,0,0,16"
                                 TextChanged="FormularioServicio_Changed"/>

                        <TextBlock Text="Precio (S/) *" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="txtPrecio" 
                                 materialDesign:HintAssist.Hint="Ej: 50.00" 
                                 materialDesign:HintAssist.Foreground="#9CA3AF"
                                 Margin="0,0,0,16"
                                 TextChanged="FormularioServicio_Changed"/>

                        <TextBlock Text="Duraci贸n Estimada (minutos)" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="txtDuracion" 
                                 materialDesign:HintAssist.Hint="Ej: 60" 
                                 materialDesign:HintAssist.Foreground="#9CA3AF"
                                 Margin="0,0,0,16"
                                 TextChanged="FormularioServicio_Changed"/>

                        <TextBlock Text="Categor铆a" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,6"/>
                        <ComboBox x:Name="cbCategoria" 
                                  materialDesign:HintAssist.Hint="Seleccione categor铆a"
                                  materialDesign:HintAssist.Foreground="#9CA3AF"
                                  DisplayMemberPath="nombre" 
                                  SelectedValuePath="idCategoriaServicio"
                                  Margin="0,0,0,16"
                                  SelectionChanged="FormularioServicio_Changed"/>

                        <CheckBox x:Name="chkActivo" 
                                  Content="Servicio activo" 
                                  IsChecked="True"
                                  Margin="0,4,0,24"/>

                        <!-- BOTONES CON SEPARACIN MEJORADA -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Button x:Name="btnGuardarActualizar" 
                                    Grid.Row="0" Grid.Column="0"
                                    Content=" Guardar" 
                                    Style="{StaticResource SuccessButton}" 
                                    Height="44"
                                    FontSize="14"
                                    Click="btnGuardarActualizar_Click"
                                    IsEnabled="False"/>

                            <!-- Bot贸n de eliminar removido: se usa desactivaci贸n del servicio -->

                            <Button x:Name="btnLimpiar" Grid.Column="2"
                                    Content="Ч Limpiar" 
                                    Style="{StaticResource SecondaryButton}" 
                                    Height="44"
                                    FontSize="14"
                                    Click="btnLimpiar_Click"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Grid Grid.Column="2">
                <!-- LISTA DE SERVICIOS (SIN COLUMNA DURACIN) -->
                <Border Background="{StaticResource CardBrush}" 
                        CornerRadius="8" 
                        Padding="18" 
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text=" Lista de Servicios" 
                                   FontSize="15" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryBrush}" 
                                   Margin="0,0,0,12"/>

                        <DataGrid x:Name="dataGridServicios"
                                  Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  SelectionMode="Single"
                                  SelectionChanged="dataGridServicios_SelectionChanged"
                                  Background="Transparent"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  RowBackground="#1E2128"
                                  AlternatingRowBackground="#252830"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  BorderThickness="0"
                                  RowHeight="40">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding idServicio}" Width="70"/>
                                <DataGridTextColumn Header="Nombre" Binding="{Binding nombre}" Width="*" MinWidth="180"/>
                                <DataGridTextColumn Header="Precio" Binding="{Binding precio, StringFormat='S/ {0:N2}'}" Width="120"/>
                                <DataGridTextColumn Header="Categor铆a" Binding="{Binding idCategoriaServicioNavigation.nombre}" Width="140"/>
                                <DataGridCheckBoxColumn Header="Activo" Binding="{Binding activo}" Width="90"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>