<UserControl x:Class="ProyectoSauna.UserControlServicios"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{StaticResource BackgroundBrush}">
    <UserControl.Resources>
        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="#6B7280"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="8,8,8,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="8,8,8,4"/>
        </Style>
        <Style TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER CON FILTROS SIMPLIFICADOS -->
        <Border Grid.Row="0" Background="{StaticResource HeaderBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="GestiÃ³n de Servicios" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="{StaticResource TextPrimaryBrush}"/>

                <!-- FILTROS BÃSICOS -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBox x:Name="txtBuscar" 
                             materialDesign:HintAssist.Hint="Buscar servicio..." 
                             materialDesign:HintAssist.Foreground="#9CA3AF"
                             Width="280" 
                             Margin="0,0,12,0"
                             TextChanged="txtBuscar_TextChanged"/>

                    <ComboBox x:Name="cbFiltroCategoria" 
                              materialDesign:HintAssist.Hint="CategorÃ­a"
                              materialDesign:HintAssist.Foreground="#9CA3AF"
                              Width="180" 
                              DisplayMemberPath="nombre" 
                              SelectedValuePath="idCategoriaServicio" 
                              Margin="0,0,12,0"
                              SelectionChanged="cbFiltroCategoria_SelectionChanged"/>

                    <CheckBox x:Name="chkMostrarInactivos" 
                              Content="Mostrar inactivos" 
                              Foreground="{StaticResource TextSecondaryBrush}" 
                              VerticalAlignment="Center"
                              Margin="0,0,16,0"
                              Checked="chkMostrarInactivos_Checked"
                              Unchecked="chkMostrarInactivos_Unchecked"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- PANEL DE FORMULARIO -->
            <Border Grid.Column="0" 
                    Background="{StaticResource CardBrush}" 
                    CornerRadius="8" 
                    Padding="20" 
                    Effect="{StaticResource CardShadow}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ Datos del Servicio" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryBrush}" 
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Nombre *" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="txtNombre" 
                                 materialDesign:HintAssist.Hint="Ej: Masaje terapÃ©utico" 
                                 materialDesign:HintAssist.Foreground="#9CA3AF"
                                 Margin="0,0,0,16"
                                 TextChanged="FormularioServicio_Changed"/>

                        <TextBlock Text="Precio (S/) *" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="txtPrecio" 
                                 materialDesign:HintAssist.Hint="Ej: 50.00" 
                                 materialDesign:HintAssist.Foreground="#9CA3AF"
                                 Margin="0,0,0,16"
                                 TextChanged="FormularioServicio_Changed"/>

                        <TextBlock Text="DuraciÃ³n Estimada (minutos)" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="txtDuracion" 
                                 materialDesign:HintAssist.Hint="Ej: 60" 
                                 materialDesign:HintAssist.Foreground="#9CA3AF"
                                 Margin="0,0,0,16"
                                 TextChanged="FormularioServicio_Changed"/>

                        <TextBlock Text="CategorÃ­a" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,6"/>
                        <ComboBox x:Name="cbCategoria" 
                                  materialDesign:HintAssist.Hint="Seleccione categorÃ­a"
                                  materialDesign:HintAssist.Foreground="#9CA3AF"
                                  DisplayMemberPath="nombre" 
                                  SelectedValuePath="idCategoriaServicio"
                                  Margin="0,0,0,16"
                                  SelectionChanged="FormularioServicio_Changed"/>

                        <CheckBox x:Name="chkActivo" 
                                  Content="Servicio activo" 
                                  IsChecked="True"
                                  Margin="0,4,0,24"/>

                        <!-- BOTONES CON SEPARACIÃ“N MEJORADA -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Button x:Name="btnGuardarActualizar" 
                                    Grid.Row="0" Grid.Column="0"
                                    Content="ðŸ’¾ Guardar" 
                                    Style="{StaticResource SuccessButton}" 
                                    Height="44"
                                    FontSize="14"
                                    Click="btnGuardarActualizar_Click"
                                    IsEnabled="False"/>

                            <!-- BotÃ³n de eliminar removido: se usa desactivaciÃ³n del servicio -->

                            <Button x:Name="btnLimpiar" Grid.Column="2"
                                    Content="ðŸ§¹ Limpiar" 
                                    Style="{StaticResource SecondaryButton}" 
                                    Height="44"
                                    FontSize="14"
                                    Click="btnLimpiar_Click"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <!-- LISTA DE SERVICIOS (SIN COLUMNA DURACIÃ“N) -->
                <Border Grid.Row="0" 
                        Background="{StaticResource CardBrush}" 
                        CornerRadius="8" 
                        Padding="18" 
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="ðŸ“‹ Lista de Servicios" 
                                   FontSize="15" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryBrush}" 
                                   Margin="0,0,0,12"/>

                        <DataGrid x:Name="dataGridServicios"
                                  Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  SelectionMode="Single"
                                  SelectionChanged="dataGridServicios_SelectionChanged"
                                  Background="Transparent"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  RowBackground="#1E2128"
                                  AlternatingRowBackground="#252830"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  BorderThickness="0"
                                  RowHeight="40">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding idServicio}" Width="70"/>
                                <DataGridTextColumn Header="Nombre" Binding="{Binding nombre}" Width="*" MinWidth="180"/>
                                <DataGridTextColumn Header="Precio" Binding="{Binding precio, StringFormat='S/ {0:N2}'}" Width="120"/>
                                <DataGridTextColumn Header="CategorÃ­a" Binding="{Binding idCategoriaServicioNavigation.nombre}" Width="140"/>
                                <DataGridCheckBoxColumn Header="Activo" Binding="{Binding activo}" Width="90"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- PANEL DE DETALLES -->
                <Border Grid.Row="2" 
                        Background="{StaticResource CardBrush}" 
                        CornerRadius="8" 
                        Padding="20" 
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Encabezado destacado -->
                        <Border Grid.Row="0" 
                                Background="{StaticResource PrimaryBrush}" 
                                CornerRadius="6" 
                                Padding="14,10" 
                                Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”" FontSize="18" Margin="0,0,10,0"/>
                                <TextBlock Text="Detalles del Servicio:" 
                                           FontSize="15" 
                                           FontWeight="SemiBold" 
                                           Foreground="White" 
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="txtServicioSeleccionado"
                                           Text="" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="#E0E0E0" 
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="360"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Formulario Detalle -->
                            <Border Grid.Column="0" 
                                    Background="#1A1D24" 
                                    CornerRadius="6" 
                                    Padding="16" 
                                    BorderBrush="{StaticResource PrimaryBrush}" 
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="âœï¸ Editar Detalle" 
                                               FontSize="13" 
                                               FontWeight="SemiBold" 
                                               Foreground="{StaticResource PrimaryBrush}" 
                                               Margin="0,0,0,16"/>

                                    <TextBlock Text="Cuenta" 
                                               Foreground="{StaticResource TextSecondaryBrush}" 
                                               FontSize="11" 
                                               FontWeight="Medium"
                                               Margin="0,0,0,6"/>
                                    <ComboBox x:Name="cbCuenta" 
                                              DisplayMemberPath="idCuenta" 
                                              SelectedValuePath="idCuenta" 
                                              IsEnabled="False"
                                              Margin="0,0,0,12"/>

                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Cantidad *" 
                                                       Foreground="{StaticResource TextSecondaryBrush}" 
                                                       FontSize="11" 
                                                       FontWeight="Medium"
                                                       Margin="0,0,0,6"/>
                                            <TextBox x:Name="txtCantidad" 
                                                     materialDesign:HintAssist.Hint="0" 
                                                     materialDesign:HintAssist.Foreground="#9CA3AF"
                                                     TextChanged="RecalcularSubtotal"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Precio Unit. *" 
                                                       Foreground="{StaticResource TextSecondaryBrush}" 
                                                       FontSize="11" 
                                                       FontWeight="Medium"
                                                       Margin="0,0,0,6"/>
                                            <TextBox x:Name="txtPrecioUnitario" 
                                                     materialDesign:HintAssist.Hint="0.00" 
                                                     materialDesign:HintAssist.Foreground="#9CA3AF"
                                                     TextChanged="RecalcularSubtotal"/>
                                        </StackPanel>
                                    </Grid>

                                    <TextBlock Text="Subtotal" 
                                               Foreground="{StaticResource TextSecondaryBrush}" 
                                               FontSize="11" 
                                               FontWeight="Medium"
                                               Margin="0,0,0,6"/>
                                    <TextBox x:Name="txtSubtotal" 
                                             IsReadOnly="True" 
                                             Margin="0,0,0,20"/>

                                    <!-- Botones de detalle con separaciÃ³n -->
                                    <StackPanel>
                                        <Button x:Name="btnActualizarDetalle" 
                                                Content="ðŸ’¾ Actualizar" 
                                                Style="{StaticResource PrimaryButton}" 
                                                Height="40"
                                                FontSize="13"
                                                Margin="0,0,0,8"
                                                Click="btnActualizarDetalle_Click"/>

                                        <Button x:Name="btnEliminarDetalle" 
                                                Content="ðŸ—‘ï¸ Eliminar" 
                                                Style="{StaticResource DangerButton}" 
                                                Height="40"
                                                FontSize="13"
                                                Margin="0,0,0,8"
                                                Click="btnEliminarDetalle_Click"/>

                                        <Button x:Name="btnLimpiarDetalle" 
                                                Content="ðŸ§¹ Limpiar" 
                                                Style="{StaticResource SecondaryButton}" 
                                                Height="40"
                                                FontSize="13"
                                                Margin="0,0,0,0"
                                                Click="btnLimpiarDetalle_Click"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- DataGrid de detalles -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="ðŸ“Š Registro de Detalles" 
                                           FontSize="13" 
                                           FontWeight="SemiBold" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           Margin="0,0,0,12"/>

                                <DataGrid x:Name="dataGridDetalles"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          SelectionMode="Single"
                                          SelectionChanged="dataGridDetalles_SelectionChanged"
                                          Background="Transparent"
                                          Foreground="{StaticResource TextPrimaryBrush}"
                                          RowBackground="#1E2128"
                                          AlternatingRowBackground="#252830"
                                          HeadersVisibility="Column"
                                          GridLinesVisibility="None"
                                          BorderThickness="0"
                                          RowHeight="38">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="#" Binding="{Binding idDetalleServicio}" Width="60"/>
                                        <DataGridTextColumn Header="Cuenta" Binding="{Binding idCuenta}" Width="90"/>
                                        <DataGridTextColumn Header="Cantidad" Binding="{Binding cantidad}" Width="100"/>
                                        <DataGridTextColumn Header="P.Unit" Binding="{Binding precioUnitario, StringFormat='S/ {0:N2}'}" Width="110"/>
                                        <DataGridTextColumn Header="Subtotal" Binding="{Binding subtotal, StringFormat='S/ {0:N2}'}" Width="120"/>
                                        <DataGridTextColumn Header="Servicio" Binding="{Binding idServicioNavigation.nombre}" Width="*" MinWidth="150"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>