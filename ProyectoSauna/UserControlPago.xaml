<UserControl x:Class="ProyectoSauna.UserControlPago"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Background="#14161C"
             Height="700" Width="1300">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" Background="#181A20" CornerRadius="8" Padding="10" BorderBrush="#2E3139" BorderThickness="1" Effect="{DynamicResource CardShadow}" Margin="-13,0,26,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="41" Margin="405,0,0,0">
                <materialDesign:PackIcon Kind="CreditCardOutline" Width="20" Height="20" Foreground="#4CC9F0"/>
                <TextBlock  Text="Pantalla de Pagos" FontSize="28" FontWeight="SemiBold" Foreground="#00E5FF" Width="364"/>
            </StackPanel>
        </Border>

        <!-- Filtros + acciones -->
        <Border Grid.Row="1" Background="#1C1F26" CornerRadius="8" Padding="12" BorderBrush="#2E3139" BorderThickness="1" Effect="{DynamicResource CardShadow}" Margin="-13,0,26,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="Método de pago" Foreground="#9EA3AD" FontSize="11" Margin="2,0,0,3"/>
                    <ComboBox ItemsSource="{Binding MetodosPago}" SelectedItem="{Binding MetodoSeleccionado}" DisplayMemberPath="nombre"
                              Background="#14161C" Foreground="White" BorderBrush="#2E3139"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="Desde" Foreground="#9EA3AD" FontSize="11" Margin="2,0,0,3"/>
                    <DatePicker SelectedDate="{Binding FechaDesde}" Background="#14161C" Foreground="White" BorderBrush="#2E3139" Width="172"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="Hasta" Foreground="#9EA3AD" FontSize="11" Margin="2,0,0,3"/>
                    <DatePicker SelectedDate="{Binding FechaHasta}" Background="#14161C" Foreground="White" BorderBrush="#2E3139" Width="180"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Vertical" Margin="0,0,12,0">
                    <TextBlock Text="Buscar referencia" Foreground="#9EA3AD" FontSize="11" Margin="2,0,0,3" Width="120" HorizontalAlignment="Left"/>
                    <TextBox Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}" Background="#14161C" Foreground="White" BorderBrush="#2E3139" Width="160" HorizontalAlignment="Left"/>
                </StackPanel>

                <ScrollViewer Grid.Column="3" Margin="161,18,0,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Grid.ColumnSpan="2">
                    <StackPanel Orientation="Horizontal" MinWidth="520">
                        <Button Margin="0,0,6,0" Padding="12,6" Click="BtnCargar_Click"
                                Background="#00B4D8" Foreground="White" BorderThickness="0" Cursor="Hand" ToolTip="Cargar">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Magnify" Width="14" Height="14" Margin="0,0,6,0"/>
                                <TextBlock Text="Cargar"/>
                            </StackPanel>
                        </Button>
                        <Button Margin="0,0,6,0" Padding="12,6" Click="BtnNuevo_Click"
                                Background="#10B981" Foreground="White" BorderThickness="0" Cursor="Hand" ToolTip="Nuevo">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Width="14" Height="14" Margin="0,0,6,0"/>
                                <TextBlock Text="Nuevo"/>
                            </StackPanel>
                        </Button>
                        <Button Margin="0,0,6,0" Padding="12,6" Click="BtnEliminar_Click"
                                Background="#D62828" Foreground="White" BorderThickness="0" Cursor="Hand" ToolTip="Eliminar">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" Width="14" Height="14" Margin="0,0,6,0"/>
                                <TextBlock Text="Eliminar"/>
                            </StackPanel>
                        </Button>
                        <Button Padding="12,6" Click="BtnExportar_Click"
                                Background="#4CC9F0" Foreground="White" BorderThickness="0" Cursor="Hand" ToolTip="Exportar">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileExport" Width="14" Height="14" Margin="0,0,6,0"/>
                                <TextBlock Text="Exportar"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Lista + DialogHost para alta -->
        <Border Grid.Row="2" Margin="-13,12,26,12" Background="#1C1F26" CornerRadius="8" Padding="8" BorderBrush="#2E3139" BorderThickness="1" Effect="{DynamicResource CardShadow}">
            <materialDesign:DialogHost x:Name="DialogHostPago">
                <materialDesign:DialogHost.DialogContent>
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Registrar Pago" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Cuenta" Width="100" VerticalAlignment="Center"/>
                            <ComboBox Width="280" ItemsSource="{Binding Cuentas}" SelectedItem="{Binding CuentaSeleccionada}" DisplayMemberPath="idCuenta"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Método" Width="100" VerticalAlignment="Center"/>
                            <ComboBox Width="280" ItemsSource="{Binding MetodosPago}" SelectedItem="{Binding MetodoSeleccionado}" DisplayMemberPath="nombre"/>
                        </StackPanel>
                        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Monto" Width="100" VerticalAlignment="Center"/>
                            <TextBox Width="180" Text="{Binding MontoNuevo, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                            <Button Content="Cancelar" Width="90" Margin="0,0,8,0" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"/>
                            <Button Content="Agregar" Width="100" Background="#10B981" Foreground="White" Click="BtnAgregarPago_Click"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:DialogHost.DialogContent>

                <DataGrid ItemsSource="{Binding Pagos}"
                          SelectedItem="{Binding PagoSeleccionado}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeColumns="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          RowBackground="#14161C"
                          AlternatingRowBackground="#15171C"
                          Foreground="White"
                          BorderThickness="0" Margin="19,1,1,-1"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.CanContentScroll="False"
                          ColumnWidth="SizeToCells"
                          IsReadOnly="True"
                          SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding idPago}" MinWidth="80"/>
                        <DataGridTextColumn Header="Fecha" Binding="{Binding fechaHora, StringFormat=yyyy-MM-dd HH:mm}" MinWidth="160"/>
                        <DataGridTextColumn Header="Cuenta" Binding="{Binding idCuenta}" MinWidth="100"/>
                        <DataGridTextColumn Header="Método" Binding="{Binding nombreMetodo}" MinWidth="160"/>
                        <DataGridTextColumn Header="Referencia" Binding="{Binding numeroReferencia}" MinWidth="220"/>
                        <DataGridTextColumn Header="Monto" Binding="{Binding monto, StringFormat=C}" MinWidth="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </materialDesign:DialogHost>
        </Border>

        <!-- Total -->
        <Grid Grid.Row="3" Margin="0,0,0,0">
            <TextBlock Text="Total pagos: " Foreground="#9EA3AD"/>
            <TextBlock Text="{Binding TotalPagos, StringFormat=C}" Foreground="#F3F4F6" Margin="100,0,0,0"/>
        </Grid>
    </Grid>
</UserControl>
